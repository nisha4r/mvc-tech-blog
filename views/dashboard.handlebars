{{#if blogposts.length}}
<section>

    {{#each blogposts as |blogpost|}}

    <div class="card">
        <div class="card-header">
            <h4><a class="link" href="/dashboard/update/{{id}}">{{title}}</a></h4>
        </div>     

      
    </div>
    <input type="hidden" id="blogpostid" value="{{blogpost.id}}" />
    {{/each}}

</section>
{{/if}}
<div class="d-flex align-item-center justify-content-center p-2"><button type="submit" class="btn btn-primary new-post"><a href="/dashboard/create">+ New Post</a></button></div>

<script src="js/delete.js"></script>