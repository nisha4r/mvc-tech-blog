<p class="m-4">Login to comment</p>
<div class="card m-4">
    <div class="card-header">
        <h5 class="card-title float-left">{{blogpost.title}}</h5>
        <h8 class="card-subtitle float-right">Posted by {{blogpost.user.username}} on {{formatDate blogpost.created_at}}</h6>
    </div>  
    <div class="card-body">  
        <p class="card-text">{{blogpost.content}}</p>
    </div>
    <div class="card-body comment">
            {{> commentcard blogpost.comments}}
    </div>
</div> 

<input type="hidden" name="blogpost" value="{{blogpost.id}}"/>

{{#if loggedIn}}
<div class="card">
    <div class="card-header"></div>
    <form class="card-body commentform">
        <p class="form-label">Comment:</p>
        <textarea class="form-input" id="comment" name="commentbody"></textarea>    
        <button type="submit" class="btn btn-secondary">Submit</button>        
    </form>               
</div>
{{/if}}

<script src="/js/comment.js"></script>