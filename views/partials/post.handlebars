<div class="card">
    <div class="card-header">
        <h3 class="card-title">{{title}}</h3>
        <small class="card-subtitle">Posted by {{user.username}} on {{formatDate created_at}}</small>
    </div>         
    <div class="card-body">  
        <p class="card-text">{{content}}</p>
    </div>   
   <div class="card-footer view-comment">
        <a href="/blogpost/{{id}}" class="view-comment card-link">View Comments</a>
    </div>
</div>  